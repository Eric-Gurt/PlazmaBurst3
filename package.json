{
    "author": "Eric Gurt",
    "name": "PlazmaBurst3",
    "version": "1.0.23",
    "description": "Plazma Burst 3 browser game wrapper with additional features",
    "main": "electron-main.js",
    "scripts": {
        "start": "electron --inspect=9230 . --enable-logging",
        "startlocal": "electron --PB3_FORCE_LOCALHOST --inspect=9230 . --enable-logging",
        "build": "electron-builder --win --x64",
        "publish": "electron-builder --win --x64 --publish always",
        "preversion": "git add . && git commit -m \"Incremental update\"",
        "postversion": "z_postversion.bat"
    },
    "dependencies": {
        "electron-updater": "^6.6.2",
        "ws": "^8.14.2"
    },
    "devDependencies": {
        "electron": "^39.2.7",
        "electron-builder": "^24.13.3"
    },
    "build": {
        "appId": "com.plazmaburst3.standalone",
        "productName": "Plazma Burst 3",
        "win": {
            "target": "nsis",
            "icon": "build/icon.ico",
            "publisherName": "Eric Gurt",
            "artifactName": "Plazma Burst 3 Setup.exe"
        },
        "directories": {
            "buildResources": "build"
        },
        "files": [
            "electron-main.js",
            "preload.js",
            "build/icon.png",
            "build/icon.ico",
            "node_modules/ws/**/*"
        ],
        "asarUnpack": [
            "node_modules/ws/**/*"
        ],
        "extraMetadata": {
            "main": "electron-main.js"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "runAfterFinish": true,
            "installerIcon": "build/icon.ico",
            "uninstallerIcon": "build/icon.ico",
            "allowElevation": true,
            "perMachine": false
        },
        "publish": {
            "provider": "github",
            "owner": "Eric-Gurt",
            "repo": "PlazmaBurst3"
        }
    }
}
